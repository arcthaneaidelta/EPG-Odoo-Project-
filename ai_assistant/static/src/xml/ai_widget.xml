<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="ai_assistant.AiAssistantWidget" owl="1">
        <!-- Floating Button -->
        <button class="ai-floating-button" t-on-click="toggleWidget">
            <span style="margin-top: -5px;" class="ai-icon"><img src="/ai_assistant/static/description/aiicon.png" 
                             alt="AI" 
                             style="width: 24px; height: 28px; border-radius: 28px;"/></span>
            <t t-if="state.unreadCount > 0" class="unread-badge">
                <t t-esc="Math.min(state.unreadCount, 9)"/>
                <t t-if="state.unreadCount > 9">+</t>
            </t>
        </button>
        
        <!-- Chat Widget -->
        <t t-if="state.isOpen">
            <div t-att-class="state.isLoading ? 'ai-chat-box loading' : 'ai-chat-box'">
                <!-- Header -->
                <div class="ai-chat-header">
                    <div class="header-left">
                        <img src="/ai_assistant/static/description/aiicon.png" 
                             alt="AI" 
                             style="width: 24px; height: 24px; margin-right: 8px; border-radius: 4px;"/>
                        <strong>Asistente de IA</strong>
                        <!-- <t t-if="state.currentContext" class="context-info">
                            <small t-esc="contextInfo"/>
                        </t> -->
                        <t t-if="!state.isConfigured" class="config-warning">
                            <small>‚öôÔ∏è Necesita configuraci√≥n</small>
                        </t>
                    </div>
                    <div class="header-right">
                        <button class="btn-clear" t-on-click="clearChat" title="Clear chat">
                            üóëÔ∏è
                        </button>
                        <button class="btn-retry" t-on-click="retryLastMessage" title="Retry last message">
                            ‚Ü©Ô∏è
                        </button>
                        <button class="btn-close" t-on-click="toggleWidget" title="Close">
                            ‚úï
                        </button>
                    </div>
                </div>
                
                <!-- Messages Area -->
                <div class="ai-messages">
                    <!-- Welcome/System Messages -->
                    <t t-foreach="state.messages" t-as="msg" t-key="msg_index">
                        <div t-att-class="'ai-message ' + msg.sender + (msg.isError ? ' error' : '') + (msg.isWarning ? ' warning' : '')">
                            <div class="message-header">
                                <span class="message-sender">
                                    <t t-if="msg.sender === 'user'">T√∫</t>
                                    <t t-elif="msg.sender === 'ai'">Asistente de IA</t>
                                    <t t-else="">Sistema</t>
                                </span>
                                <small class="message-time">
                                    <t t-esc="msg.timestamp.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})"/>
                                </small>
                            </div>
                            <div class="message-text" t-esc="msg.text"/>
                            <div class="message-actions">
                                <t t-if="msg.sender === 'ai'">
                                    <button 
                                        class="btn-copy" 
                                        t-on-click="() => this.copyToClipboard(msg.text)"
                                        title="Copy to clipboard">
                                        üìã
                                    </button>
                                </t>
                            </div>
                        </div>
                    </t>
                    
                    <!-- Loading Indicator -->
                    <t t-if="state.isLoading">
                        <div class="ai-message ai loading">
                            <div class="loading-indicator">
                                <div class="dot"></div>
                                <div class="dot"></div>
                                <div class="dot"></div>
                            </div>
                            <div class="loading-text">Pensamiento...</div>
                        </div>
                    </t>
                    
                    <!-- Empty State -->
                    <t t-if="state.messages.length === 0 and !state.isLoading">
                        <div class="welcome-message">
                            <div class="welcome-icon">ü§ñ</div>
                            <h4>Asistente Profesional</h4>
                            <p><strong>Aviso:</strong> La IA est√° dise√±ada para ayudarle a trabajar mejor en su negocio, no como entretenimiento.</p>
                            <p>Puedo ayudarle con:</p>
                            <ul>
                                <li>Optimizaci√≥n de tareas en el CRM</li>
                                <li>Informaci√≥n de registros de Odoo</li>
                                <li>Conceptos generales de negocio</li>
                            </ul>
                        </div>
                    </t>
                </div>
                
                <!-- Input Area -->
                <div class="ai-input-area">
                    <textarea 
                        class="ai-input" 
                        placeholder="Preg√∫nteme"
                        t-model="state.inputText"
                        t-on-keydown="handleKeyPress"
                        t-att-disabled="state.isLoading or !state.isConfigured"
                        rows="1"
                        autocomplete="off"
                        autocorrect="off"
                        spellcheck="true"
                    />
                    <button 
                        class="ai-send" 
                        t-on-click="sendMessage"
                        t-att-disabled="state.isLoading or !state.inputText.trim() or !state.isConfigured"
                        t-att-class="state.isLoading ? 'sending' : ''"
                        title="Send message (Enter)"
                    >
                        <t t-if="state.isLoading">
                            <span class="spinner"></span>
                        </t>
                        <t t-else="">‚û§</t>
                    </button>
                </div>
                
                <!-- Footer -->
                <div class="ai-chat-footer">
                    <t t-if="!state.isConfigured">
                        <div class="config-alert">
                            <small>‚öôÔ∏è Configure la clave API en los par√°metros del sistema</small>
                        </div>
                    </t>
                    <t t-else="">
                        <small class="hint">
                            Presione Enter para enviar ‚Ä¢ Shift+Enter para nueva l√≠nea
                        </small>
                    </t>
                </div>
            </div>
        </t>
    </t>
</templates>