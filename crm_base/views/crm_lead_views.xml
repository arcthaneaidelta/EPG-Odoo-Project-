<odoo>
    <record id="crm_lead_form_saas" model="ir.ui.view">
        <field name="name">crm.lead.form.saas</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tag_ids']" position="before">
                <field name="score" readonly="1"/>
                <field name="source_type"/>
            </xpath>
            <!-- <xpath expr="//field[@name='partner_id']" position="before">
                <field name="contact_name"
                       placeholder="Contact name (if not an existing customer)"/>
            </xpath> -->
            <xpath expr="//header" position="inside">
                <button
                    name="action_whatsapp"
                    type="object"
                    string="WhatsApp"
                    class="oe_highlight"
                />
            </xpath>

            <!-- Add lost_reason_text field after lost_reason_id -->
            <xpath expr="//field[@name='lost_reason_id']" position="after">
                <field name="lost_reason_text" 
                       invisible="active"
                       readonly="1"/>
            </xpath>
            
            <!-- Optional: Hide the original lost_reason_id field -->
            <xpath expr="//field[@name='lost_reason_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_crm_lead_tree_drag_inherit" model="ir.ui.view">
        <field name="name">crm.lead.tree.drag.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/> 
        <field name="arch" type="xml">
            
            <xpath expr="//list" position="attributes">
                <attribute name="default_order">sequence, id desc</attribute>
            </xpath>

            <xpath expr="//field[@name='name']" position="before">
                <field name="sequence" widget="handle"/>
            </xpath>
            
        </field>
    </record>

    <record id="res_partner_form_remove_website_placeholder" model="ir.ui.view">
        <field name="name">res.partner.form.remove.website.placeholder</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='website']" position="attributes">
                <attribute name="placeholder"/>
            </xpath>

        </field>
    </record>

    <record id="crm_lead_view_tree_opportunity_reporting_inherit" model="ir.ui.view">
        <field name="name">crm.lead.tree.opportunity.reporting.inherit.epg</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_tree_opportunity_reporting"/>
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="create_date" string="Created On" widget="date"/>
            </field>
        </field>
    </record>


</odoo>
