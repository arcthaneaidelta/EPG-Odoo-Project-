<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_crm_base" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.crm.base</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_information']/group/group[1]/field[@name='user_id']" position="after">
                <field name="commission_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>
